@model ProyectoFinalFront.ViewModels.TrabajosViewModel

<div class="modal fade" id="trabajoModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Alta y/o modificación de Trabajos.</h5>
            </div>
            @using (Html.BeginForm("GuardarTrabajo", "/Trabajos", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Proyecto ID</label>
                            <input type="text" name="proyectoId" class="col-md-8 form-control" required />
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Servicio ID</label>
                            <input type="text" name="servicioId" class="col-md-8 form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Fecha</label>
                            @Html.EditorFor(x=> x.Fecha, new {htmlAttributes = new {@class = "col-md-8 form-control",required = "required" } })
                        </div>
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">CantHoras</label>
                            @Html.EditorFor(x=> x.CantHoras, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">ValorHora</label>
                            @Html.EditorFor(x=> x.ValorHora, new {htmlAttributes = new {@class = "col-md-8 form-control",required = "required" } })
                        </div>

                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-5 form-control-label">Costo</label>
                            @Html.EditorFor(x=> x.Costo, new {htmlAttributes = new {@class = "col-md-8 form-control" } })
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                </div>
            }
        </div>
    </div>
</div>
